<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>SALUS - Sign-Up</title>

    <link rel="stylesheet" href="assets/vendor/bootstrap/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="assets/vendor/fonts/circular-std/style.css">
    <link rel="stylesheet" href="assets/vendor/fonts/fontawesome/css/fontawesome-all.css">
    <link rel="stylesheet" href="assets/libs/css/style.css">
    <link rel="stylesheet" href="salus/css/input-check.css">
    <style>
        html,
        body {
            height: 100%;
        }

        body {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-align: center;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
            background-image: linear-gradient(to top, #7f7fd5, #86a8e7, #91eae4);
            background-repeat: no-repeat;
            background-attachment: fixed;
            font-family: 'Arial'
        }

        h2.logostr {
            margin: 0 auto;
            letter-spacing: 4px;
            color: #1674b3;
        }

        h3 {
            font-family: 'Arial';
            font-weight: bold;
        }

        .img-responsive.img-center {
            padding-top: 16px;
            margin: 0 auto;
        }

        #signup-btn {
            background-color: #3498DB;
            color: #ffffff;
        }
    </style>

    <!-- 팝업 메시지 ( Bootstrap4 Modal 참고 )-->

    {% if modal_msg %}
        <script type="text/javascript">
            $(document).ready(function(){
                $("#myModal").modal('show');
            });
        </script>
    {% endif %}
</head>

<body>
    <form class="splash-container" action="/signup/handle" method="post" oninput="passwordc.setCustomValidity(passwordc.value != password.value ? 'Passwords do not match.' : '')">
        <div class="card">
            <img src="assets/images/logo.png" class="img-responsive img-center" width="64">
            <h2 class="logostr">SALUS</h2>
            <div class="card-header">
                <h3 class="mb-1">Sign-Up</h3>
                <p>Please enter your user information.</p>
            </div>

            <div class="card-body">
                <div class="form-group">
                    Email address <input class="form-control form-control-lg" type="email" name="email" required="" autocomplete="off">
                </div>
                <div class="form-group">
                    Password <input id="password" class="form-control form-control-lg" type="password" name="password" required="" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,32}$">
                </div>
                <div id="password-check" class="check-message-group form-group">
                    <p id="letter" class="invalid">A <b>lowercase</b> letter</p>
                    <p id="capital" class="invalid">A <b>capital (uppercase)</b> letter</p>
                    <p id="number" class="invalid">A <b>number</b></p>
                    <p id="length" class="invalid">Between <b>8 to 32 characters</b></p>
                </div>
                <div class="form-group">
                    Password confirm <input id="passwordc" class="form-control form-control-lg" type="password">
                </div>
                <div id="passwordc-check" class="check-message-group form-group">
                    <p id="match" class="invalid">Password <b>must be match</b></p>
                </div>
                <div class="form-group">
                    First name <input class="form-control form-control-lg" type="text" name="first-name" required="" autocomplete="off">
                </div>
                <div class="form-group">
                    Last name <input class="form-control form-control-lg" type="text" name="last-name" required="" autocomplete="off">
                </div>
                <div class="form-group pt-2">
                    <button class="btn btn-block btn-primary" id="signup-btn" type="submit">Register My Account</button>
                </div>
            </div>
        </div>
    </form>

    <!-- Button to Open the Modal -->
    {# <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Open modal</button> #}
      
    <!-- The Modal -->
    {% if modal_msg %}
    <div class="modal show fade" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                <h4 class="modal-title">Faild to sign-up</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                {{modal_msg}}
                </div>
                <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    <script type="text/javascript" src="salus/js/sign-up.js"></script>
</body>
</html>
